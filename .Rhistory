get_pokemon <- function(name) {
data <- fromJSON("pokemon_stats.json")
name <- tolower(name)
idx <- match(name, tolower(data$name))
if (is.na(idx)) {
stop("No Pokémon found with that name.", call. = FALSE)
}
p <- data[idx, ]
data.frame(
id = idx,
name = p$name,
type = paste(p$type, collapse = ", "),
hp = p$hp,
attack = p$attack,
defense = p$defense,
sattack = p$sattack,
sdefense = p$sdefense,
stringsAsFactors = FALSE
)
}
